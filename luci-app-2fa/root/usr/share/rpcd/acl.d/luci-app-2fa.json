{
	"luci-app-2fa": {
		"description": "Grant access to 2-Factor Authentication configuration",
		"read": {
			"ubus": {
				"2fa": [ "getConfig", "verifyOTP", "isEnabled", "listAuthPlugins" ]
			},
			"uci": [ "2fa", "luci" ]
		},
		"write": {
			"ubus": {
				"2fa": [ "setConfig", "generateKey" ]
			},
			"uci": [ "2fa", "luci" ]
		}
	},
	"unauthenticated": {
		"description": "Grant unauthenticated access to 2FA verification for login flow",
		"read": {
			"ubus": {
				"2fa": [ "isEnabled", "verifyOTP" ]
			}
		}
	}
}
