config settings 'settings'
	option enabled '0'
	option ip_whitelist_enabled '0'
	option rate_limit_enabled '1'
	option rate_limit_max_attempts '5'
	option rate_limit_window '600'
	option rate_limit_lockout '3600'
	# Minimum valid system time (Unix timestamp for 2026-01-01 00:00:00 UTC)
	# If system time is before this, TOTP will be disabled for security
	option min_valid_time '1767225600'
	# Strict mode: when enabled and system time < 2026, block non-LAN subnet logins
	# IPs from the LAN interface subnet (detected from OpenWrt network config) bypass 2FA
	option strict_mode '0'

config login 'root'
	option key ''
	option type 'totp'
	option step '30'
	option counter '0'
