+/**
+ * Load authentication plugins from /usr/share/luci/auth.d/
+ * 
+ * Each plugin is a ucode module that exports:
+ * - name: string - Plugin identifier
+ * - check(http, user): object - Check if additional auth is required
+ *   Returns: { required: bool, fields: [...], message: string }
+ * - verify(http, user): object - Verify the additional authentication
+ *   Returns: { success: bool, message: string }
+ */
+function load_auth_plugins() {
+	if (auth_plugins != null)
+		return auth_plugins;
+
+	auth_plugins = [];
+
+	let plugin_dir = stat(auth_plugins_dir);
+	if (!plugin_dir || plugin_dir.type != 'directory')
+		return auth_plugins;
+
+	let files = lsdir(auth_plugins_dir);
+	if (!files)
+		return auth_plugins;
+
+	for (let file in files) {
+		if (!match(file, /\.uc$/))
+			continue;
+
+		try {
+			let path = `${auth_plugins_dir}/${file}`;
+			let code = loadfile(path);
+			if (!code)
+				continue;
+			
+			let plugin = call(code);
+			if (type(plugin) == 'object' && 
+			    type(plugin.name) == 'string' &&
+			    type(plugin.check) == 'function' &&
+			    type(plugin.verify) == 'function') {
